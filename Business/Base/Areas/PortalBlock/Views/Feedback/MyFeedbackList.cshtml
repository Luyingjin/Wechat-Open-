<div class="mini-toolbar" id="btnDiv">
    <table>
        <tr>
            <td style="width: 100%;">
                <a class="mini-button" iconcls="icon-add" onclick="add({ height: '40%',width:'60%',title:'添加反馈信息',onDestroy:closeWindows});" plain="true">
                    增加</a> <a class="mini-button" iconcls="icon-edit" onclick="edit({ height: '40%',width:'60%',title:'修改反馈信息',onDestroy:closeWindows});"
                        plain="true">编辑</a> <a class="mini-button" iconcls="icon-remove" onclick="del()"
                            plain="true">删除</a>
            </td>
            <td id="btnRight">
                <input class="mini-buttonedit searchbox" id="key" emptytext="请输入标题" style="width: 200px;"
                    onenter="quickSearch('Title');" onbuttonclick="quickSearch('Title');" />
            </td>
        </tr>
    </table>
</div>
<div class="mini-fit">
    <div id="dataGrid" class="mini-datagrid" idfield="ID" url="GetMyFeedbackList" style="width: 100%;
        height: 100%;"  allowMoveColumn="false">
        <div property="columns">
            <div type="checkcolumn">
            </div>
            <div field="Title" headeralign="center" align="left" width="120" allowsort="true">
                标题</div>
           <div field="Content" headeralign="center" align="left" width="200" allowsort="true">
                内容</div>
            <div field="IsUse" headeralign="center" visible="false" align="center" width="40" allowsort="true">
                是否启用</div>
            <div field="CreateUserName" width="60" headeralign="center" allowsort="true" align="center">
                创建人</div>
            <div field="CreateTime" width="60" dateFormat="yyyy-MM-dd" headeralign="center" allowsort="true" align="center">
                创建时间</div>
      </div>
    </div>
</div>
<script type="text/javascript">
@Html.GetEnum("System.TorF")
</script>
<script type="text/javascript">
    //为Grid枚举列指定枚举定义
    addGridEnum("dataGrid", "IsUse", "TorF");
    //注册Grid链接列
    addGridLink('dataGrid', 'Title', 'Edit?ID={ID}', { funcType: 'view', width: "60%",
        height: "40%"
    });
    function closeWindows() {
        mini.get("dataGrid").load();
    }
</script>
