<div class="mini-toolbar" id="btnDiv">
    <table>
        <tr>
            <td>
                <a class="mini-button" id="btnSave" plain="true" iconcls="icon-save">保存</a> <a class="mini-button"
                    plain="true" iconcls="icon-cancel" onclick="closeWindow()">取消</a>
            </td>
            <td id="btnRight">
                <a class="mini-button" onclick="showHelp()" iconcls="icon-help" plain="true">帮助</a>
            </td>
        </tr>
    </table>
</div>
<form id="dataForm" method="post">
<input name="ID" class="mini-hidden" />
<input name="BlockType" class="mini-hidden" />
<input name="TemplateId" class="mini-hidden" />
<input name="Color" class="mini-hidden" />
<input name="ColorValue" class="mini-hidden" />
<div class="basediv" style="max-width: 850px">
    <table width="100%">
        <tr style="height: 0px">
            <td width="15%">
            </td>
            <td width="35%">
            </td>
            <td width="15%">
            </td>
            <td width="35%">
            </td>
        </tr>
        <tr>
            <td>
                标题
            </td>
            <td>
                <input name="Title" style="width: 100%" class="mini-textbox" vtype="maxLength:50"
                    required="true" />
            </td>
            <td>
            </td>
            <td>
            </td>
        </tr>
        <tr>
            <td>
                反馈地址
            </td>
            <td colspan='3'>
                <input class="mini-textbox" name="Url" style="width: 100%;" required="true"></textarea>
            </td>
        </tr>
        <tr>
            <td>
                反馈内容
            </td>
            <td colspan='3'>
                <textarea class="mini-textarea" name="Content" style="width: 100%; height: 88px"
                    required="true"></textarea>
            </td>
        </tr>
        <tr>
            <td>
                相关附件
            </td>
            <td colspan='3'>
                <span name="Attachment" class="mini-multifile"></span>
            </td>
        </tr>
        <tr style="display: none">
            <td>
                是否启用
            </td>
            <td>
                <input class="mini-combobox" name="IsUse" style="width: 60px;" valuefield="value"
                    textfield="text" data="TorF" required="true" />
            </td>
            <td>
            </td>
            <td>
            </td>
        </tr>
    </table>
</div>
</form>
<script language="javascript" type="text/javascript">
    @Html.GetEnum("System.TorF")
</script>
<script language="javascript" type="text/javascript">
    $(document).ready(function () {
        $("#btnSave").bind("click", function () {
            var id = getQueryString("ID");
            save({ closeWindow: true });
        });
    });
    function onFormSetData(data) {
        if (data == undefined || data.Url == undefined) {
            mini.getbyName("Url").setValue(getQueryString("url"));
            mini.getbyName("Title").setValue(getQueryString("Title"));
        }
    }
</script>
