@section scripts{
    <script charset="utf-8" src="@Url.Content("/Base/Scripts/KindEditor/kindeditor-min.js")" type="text/javascript"></script>
    <script charset="utf-8" src="@Url.Content("/Base/Scripts/KindEditor/lang/zh_CN.js")" type="text/javascript"></script>
    <link href="@Url.Content("/Base/Scripts/KindEditor/themes/default/default.css")" rel="stylesheet" type="text/css" />
<script language="javascript" type="text/javascript">
    KindEditor.ready(function (K) {
        window.editor = K.create('textarea.KindEditor', {
            uploadJson: '/Base/PortalBlock/KindEditor/Upload',
            fileManagerJson: '/Base/PortalBlock/KindEditor/FileManager',
            allowFileManager: true,
            resizeType: 0,
            items: [
                'cut', 'copy', 'paste', 'plainpaste', 'wordpaste', '|', 'justifyleft', 'justifycenter', 'justifyright', 'justifyfull',
                'lineheight', 'insertorderedlist', 'insertunorderedlist', 'indent', 'outdent', 'formatblock', '|', 'image', 'multiimage', '|', 'fullscreen', '/',
                'bold', 'italic', 'underline', 'strikethrough', 'subscript', 'superscript', 'forecolor', 'hilitecolor',
                'fontname', 'fontsize', 'removeformat'
                ]
        });
        if (getQueryString("FuncType").toLowerCase() == "view") {
            window.editor.readonly(true);
        }
    });
</script>

<style>
    .send {background-image:url(/CommonWebResource/RelateResource/image/icons/icon_mail.gif)}
</style>
}
<div class="mini-toolbar" id="btnDiv">
    <table>
        <tr>
            <td>
                <a class="mini-button" plain="true" iconcls="send" onclick="sendMsg()">发送</a>
                <a class="mini-button" plain="true" id="btnCancel" iconcls="icon-cancel" onclick="closeWindow()">取消</a>
                <span class="separator"></span>
                <input class="mini-checkbox" id="cbHigh" text="重要"  onvaluechanged="onHighValueChanged"/>
                <input class="mini-checkbox" id="cbReadReceipt" text="已读回执"  onvaluechanged="onReceiptValueChanged"/>
            </td>
            <td id="btnRight">
                <a class="mini-button" onclick="showHelp()" iconcls="icon-help" plain="true">帮助</a>
            </td>
        </tr>
    </table>
</div>
<form id="dataForm" method="post">
<input name="ID" class="mini-hidden" />
<input id="IsReadReceipt" name="IsReadReceipt" class="mini-hidden" />
<input id="Importance" name="Importance" class="mini-hidden" />
<div class="formDiv">
    <fieldset>
        <legend>基本信息</legend>
        <div>
            <table>
                <tr class="hideRow">
                    <td width="15%"></td>
                    <td width="35%"></td>
                    <td width="15%"></td>
                    <td width="35%"></td>
                </tr>
                <tr>
                    <td>标题</td>
                    <td colspan="3">
                        <input name="Title" class="mini-textbox" style="width: 100%;" required="true" />
                    </td>
                </tr>
                <tr>
                    <td>接收人</td>
                    <td colspan="3">
                        <input name="ReceiverIDs" textname="ReceiverNames" class="mini-buttonedit" style="width: 100%;" />
                    </td>
                </tr>
                <tr>
                    <td>接收部门</td>
                    <td colspan="3">
                        <input name="ReceiverDeptIDs" textname="ReceiverDeptNames" class="mini-buttonedit" style="width: 100%;" />
                    </td>
                </tr>
                <tr>
                    <td>内容</td>
                    <td colspan="3">
                        <textarea name="Content" class="KindEditor" style="width: 100%; height: 350px"></textarea>
                    </td>
                </tr>
                <tr id="trEdit" style="display:none">
                    <td>链接</td>
                    <td colspan="3">
                        <input name="LinkUrl" class="mini-textbox" style="width: 100%;" vtype="url"/>
                    </td>
                </tr>
                <tr id="trView" style="display:none">
                    <td>链接</td>
                    <td colspan="3">
                        <a id="aLinkUrl" href="javascript:void(0);">消息链接</a>
                    </td>
                </tr>
                <tr>
                    <td>
                        附件
                    </td>
                    <td colspan="3">
                        <input class="mini-multifile" style="width:100%" name="AttachFileIDs" />
                    </td>
                </tr>
            </table>
        </div>
    </fieldset>
</div>
</form>
<script type="text/javascript">
    addMultiUserSelector("ReceiverIDs");
    addMultiOrgSelector("ReceiverDeptIDs");

    mini.parse();
    var hidReadReceipt = mini.get("IsReadReceipt");
    var hidImportance = mini.get("Importance");

    $(function () {
        mini.get("btnCancel").hide();
    });

    function onFormSetData(data) {
        if (getQueryString("FuncType") == "View") {
            $("#trEdit").hide();
            if ($.trim(data.LinkUrl) != "") {
                $("#aLinkUrl").click(function () {
                    openWindow(data.LinkUrl);
                });
                $("#trView").show();
            }
        }
        if ($.trim(data.Importance) == "1") {
            mini.get("cbHigh").setValue(true);
        }
    }

    function onHighValueChanged(e) {
        if (e.sender.getValue() == "true")
            hidImportance.setValue("1");
        else
            hidImportance.setValue("0");
    }

    function onReceiptValueChanged(e) {
        if (e.sender.getValue() == "true")
            hidReadReceipt.setValue("1");
        else
            hidReadReceipt.setValue("0");
    }

    function onCompleteSend(json, settings) {
        if (getQueryString("FuncType") == "Send") {
            window.location.reload();
        }
    }

    function sendMsg() {
        if (mini.getbyName("ReceiverIDs").getValue() == "" && mini.getbyName("ReceiverDeptIDs").getValue() == "") {
            msgUI("接收人或接收部门至少有一个不为空!");
            return;
        }
        save({ actionTitle: '发送', onComplete: onCompleteSend });
    }

</script>
