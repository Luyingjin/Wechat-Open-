<div style="width: 100%; height: 100%;">
    <div class="mini-toolbar" style="padding: 2px; border-top: 0; border-left: 0; border-right: 0;">
        <a class="mini-button" iconcls="icon-refer" plain="true" onclick="returnValue()">选择</a>
        <a class="mini-button" iconcls="icon-clear" plain="true" onclick="closeWindow([]);">清空</a>
    </div>
    <div class="mini-fit" style="overflow-x: hidden">
        <ul id="dataTree" class="mini-tree" style="width: 100%; overflow: hidden;" showtreeicon="true" url="GetTree" iconfield="Type" textfield="Name" idfield="ID"
            parentfield="ParentID" resultastree="false" expandonload="0" checkRecursive="false">
        </ul>
    </div>
</div>
<script type="text/javascript">

    var selectMode = getQueryString("SelectMode");
    if (selectMode == "Multi") {
        $("#dataTree").attr("showCheckBox", true);
    }

    function returnValue() {
        var tree = mini.get("dataTree");
        var result;
        if (tree.showCheckBox) {
            result = tree.getCheckedNodes();
        }
        else
            result = [tree.getSelectedNode()];
        closeWindow(result);
    }

    function setData(data) {
        var tree = mini.get("dataTree");
        for (var i = 0; i < data.length; i++) {
            var node = tree.getNode(data[i]["ID"]);
            tree.checkNode(node);
        }
    }

    
</script>
